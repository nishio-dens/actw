<div class="page-top">
<h1>テストユーザ さんのフィルター設定</h1>
</div>

<div class="row">
  <div class="col-md-12">
  <%= link_to new_filter_path, class: 'btn btn-default' do %>
    <i class="fa fa-plus"></i>
    フィルターを追加
  <% end %>

  <%= link_to '#', class: 'btn btn-default' do %>
    <i class="fa fa-wrench"></i>
    フィルター表示順を変更
  <% end %>

  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12 actw-settings">
  <h2>フィルター一覧</h2>

  <%= render 'shared/flash_message' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>表示順</th>
        <th>フィルター名</th>
        <th>データ数</th>
        <th>マイページトップ表示</th>
      </tr>
    </thead>
    <tbody>
    <% @filters.each do |filter| %>
    <tr>
      <td><%= filter.display_order %></td>
      <td><%= link_to filter.name, edit_filter_path(filter) %></td>
      <td>0</td>
      <td>
        <% if filter.display_mypage %>
          <label class="label label-success">トップに表示</label>
        <% else %>
          <label class="label label-danger">トップでは非表示</label>
        <% end %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div> <!-- /actw-settings -->
</div>
